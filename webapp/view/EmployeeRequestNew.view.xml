<mvc:View controllerName="com.bmc.hcm.drf.zhcmuxdrf.controller.EmployeeRequest"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core">
    <f:DynamicPage id="idEmployeeRequestEditMainPage" class="cmnCandidateListPageNew sapUiNoContentPadding" title="{i18n>NEW_EMPLOYEE_REQUEST_FORM}" floatingFooter="true" busy="{employeeRequestView>/busy}"
		busyIndicatorDelay="0" showHeader="true" showNavButton="true" navButtonPress="onCancelForm" showFooter="true">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <FlexBox direction="Row" alignItems="Center">
                        <core:Icon src="sap-icon://nav-back" press="onNavBack" color="#346187" class="erfPageBackButtonBlue sapUiSmallMarginEnd"/>
                        <core:Icon src="sap-icon://clinical-order" size="1.5rem" class="sapUiSmallMarginEnd" color="#346187"/>
                        <Title text="{i18n>NEW_DOCUMENT_REQUEST}" level="H3"/>
                    </FlexBox>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:content>
			<core:Fragment fragmentName="com.bmc.hcm.drf.zhcmuxdrf.fragment.EmployeeRequestChange" type="XML"/>
        </f:content>
        <f:footer>
            <OverflowToolbar visible="true">
                <ToolbarSpacer/>
                <Button text="{i18n>SAVE_BUTTON}" icon="sap-icon://save" type="Accept" press="onSaveEmployeeRequest"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>