<core:FragmentDefinition xmlns="sap.m" 	xmlns:f="sap.ui.layout.form" xmlns:u="sap.ui.unified" xmlns:core="sap.ui.core">
    <Dialog title="{i18n>DOCUMENT_UPLOAD_TITLE} - {employeeRequestView>/uploadFilters/Ename}" contentWidth="50%" contentHeight="500px">
        <content>
            <MessageStrip class="sapUiSmallMargin" text="{i18n>MAX_FILE_SIZE_INFO}" type="Information" showCloseButton="true" showIcon="true"/>
            <f:Form id="idUploadAttachmentForm2" editable="true">
                <f:layout>
                    <f:ResponsiveGridLayout labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="true"/>
                </f:layout>
    
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="{i18n>DOCUMENT_TYPE}">
                                <f:fields>
                                    <ComboBox selectedKey="{path: 'employeeRequestView>/requestDocument/Zbelt'}" required="true" items="{ path:'/ValueHelpSet' , filters:[{path: 'Drfvh' , operator : 'EQ' , value1 : 'Drfbl' } ] }" change="onValueHelpSetName2ComboBoxChange">
                                        <core:ListItem additionalText="{Selky}" key="{Fldky}" text="{Fldvl}"/>
                                    </ComboBox>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>DOCUMENT_NAME}">
                                <f:fields>
                                    <ComboBox id="idZbelnComboBox" selectedKey="{path: 'employeeRequestView>/requestDocument/Zbeln'}" required="true" items="{ path:'/ValueHelpSet' , filters:[{path: 'Drfvh' , operator : 'EQ' , value1 : 'Drfbn' } ] }" >
                                        <core:ListItem additionalText="{Selky}" key="{Fldky}" text="{Fldvl}"/>
                                    </ComboBox>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>DOCUMENT_NO}">
                                <f:fields>
                                    <Input value="{employeeRequestView>/requestDocument/Zblno}" required="true" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>INSTITUTE_NAME_LABEL}">
                                <f:fields>
                                    <Input value="{employeeRequestView>/requestDocument/Zkurm}" required="true" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>DOCUMENT_DATE}">
                                <f:fields>
                                    <DatePicker value="{path:'employeeRequestView>/requestDocument/Ztarh', 
                                        type: 'sap.ui.model.type.Date', 
                                        formatOptions: {UTC:true , pattern: 'dd.MM.yyyy'}}" required="true">
                                    </DatePicker>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>EXPIRY_DATE}">
                                <f:fields>
                                    <DatePicker value="{path:'employeeRequestView>/requestDocument/Zgecr', 
                                        type: 'sap.ui.model.type.Date',
                                        formatOptions: {UTC:true , pattern: 'dd.MM.yyyy'}}" required="true">
                                    </DatePicker>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>NOTE_LABEL}">
                                <f:fields>
                                    <TextArea value="{employeeRequestView>/requestDocument/Zznot}" maxLength="255" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>DOCUMENT_UPLOAD}">
                                <f:fields>
                                    <u:FileUploader id="idAttachmentFileUploaderDocument" name="candidateFileUploader" uploadUrl="" uploadComplete="onAttachmentDocumentUploadComplete" change="onAttachmentDocumentFileChange" typeMissmatch="onAttachmentDocumentFileTypeMissmatch" style="Emphasized" fileType="pdf,xls,xlsx,doc,docx,tiff,jpg,png,zip,rar,msg,eml" maximumFileSize="5" fileSizeExceed="onAttachmentDocumentFileSizeExceed" placeholder="{i18n>LABEL_UPLOAD_PLACEHOLDER}" sendXHR="true" useMultipart="false" class="candidateFileUploader" width="95%"></u:FileUploader>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </content>
        <buttons>
            <Button text="{i18n>CLOSE_BUTTON}" press="onCancelUpload" icon="sap-icon://cancel"/>
            <Button text="{i18n>INTERVIEW_SAVE}" press="onDocumentUploadPress" type="Accept" icon="sap-icon://upload"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>