			<Button text="Evrak Yükleme" icon="sap-icon://upload" type="Emphasized" press="onAddDocument"/>
			<Button text="Belge Yükleme" icon="sap-icon://add-document" type="Default" press="onUploadDocument" />
			<Button text="Belge Görüntüle" icon="sap-icon://document" type="Transparent" press="onViewDocument" />
		</buttons>
	</ActionSheet>
</c:FragmentDefinition>