<c:FragmentDefinition xmlns="sap.m"
	xmlns:c="sap.ui.core">
	<ActionSheet title="{i18n>DOCUMENT_ACTIONS}" placement="Bottom">
		<buttons>
			<Button text="{i18n>EVRAK_UPLOAD}" icon="sap-icon://upload" type="Emphasized" press="onAddDocument"/>
			<Button text="{i18n>DOCUMENT_UPLOAD_ACTION}" icon="sap-icon://add-document" type="Default" press="onUploadDocument"  visible="{= ${employeeRequestView>/request/Drfst} === '030' }" />
			<Button text="{i18n>DOCUMENT_VIEW}" icon="sap-icon://document" type="Transparent" press="onViewDocument" visible="{= ${employeeRequestView>/request/Drfst} === '030' }" />
		</buttons>
	</ActionSheet>
</c:FragmentDefinition>