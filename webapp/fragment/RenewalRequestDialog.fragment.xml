<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">
    <Dialog id="yenilemeTalebiDialog" title="Yenileme Talebi Formu" contentWidth="40%" contentHeight="auto" resizable="true" draggable="true">
        <content>
            <l:VerticalLayout class="sapUiContentPadding" width="100%">
                <!-- Açıklama -->
                <Label text="Gerekçe:" required="true" class="sapUiSmallMarginTop"/>
                <TextArea id="descTextArea" placeholder="Yenileme talebi gerekçesini giriniz..." rows="6" width="100%" maxLength="1000" showExceededText="true" liveChange="onTextAreaLiveChange"/>
            </l:VerticalLayout>
        </content>
        <buttons>
            <Button text="Kaydet" type="Emphasized" icon="sap-icon://save" press="onRenovationRequestSave"/>
            <Button text="İptal" icon="sap-icon://cancel" press="onRenovationRequestCancel"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>