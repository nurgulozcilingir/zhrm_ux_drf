<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="Yenileme Gerekçesi" contentWidth="500px" contentHeight="300px">
        <content>
            <VBox class="sapUiMediumMargin">
                <Label text="Lütfen yenileme gerekçesini belirtiniz:" class="sapUiSmallMarginBottom"/>
                <TextArea id="renewalReasonTextArea" 
                         value="{employeeRequestView>/currentEmployee/Rendc}" 
                         rows="6" 
                         width="100%" 
                         placeholder="Gerekçenizi buraya yazınız..."
                         required="true"/>
            </VBox>
        </content>
        <buttons>
            <Button text="Tamam" press="onRenewalReasonConfirm" type="Emphasized"/>
            <Button text="İptal" press="onRenewalReasonCancel"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>