<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="{i18n>RENEWAL_REASON_TITLE}" contentWidth="500px" contentHeight="300px">
        <content>
            <VBox class="sapUiMediumMargin">
                <Label text="{i18n>RENEWAL_REASON_LABEL}" class="sapUiSmallMarginBottom"/>
                <TextArea id="renewalReasonTextArea" 
                         value="{employeeRequestView>/currentEmployee/Rendc}" 
                         rows="6" 
                         width="100%" 
                         placeholder="{i18n>RENEWAL_REASON_PLACEHOLDER}"
                         required="true"/>
            </VBox>
        </content>
        <buttons>
            <Button text="{i18n>OK_BUTTON}" press="onRenewalReasonConfirm" type="Emphasized"/>
            <Button text="{i18n>CANCEL}" press="onRenewalReasonCancel"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>