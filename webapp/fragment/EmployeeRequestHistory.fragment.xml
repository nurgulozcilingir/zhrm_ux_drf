<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:commons="sap.suite.ui.commons" xmlns:f="sap.ui.layout.form">
	<commons:Timeline enableDoubleSided="true" axisOrientation="Vertical" growingThreshold="0" content="{employeeRequestView>/formHistory}"
		class="erfTimeLine" showHeaderBar="false" enableScroll="false" sortOldestFirst="false" noDataText="{i18n>NO_REQUEST_HISTORY}" sort="false">
		<commons:content>
			<commons:TimelineItem
				dateTime="{ parts:[{path:'employeeRequestView>Actdt'},{path:'employeeRequestView>Acttm'}], formatter: '.formatter.getDateTime'}"
				userNameClickable="false" userPicture="/sap/opu/odata/sap/ZHCM_GENERIC_SRV/EmployeeSearchSet('{employeeRequestView>Chnpn}')/$value"
				userName="{employeeRequestView>Chnen}" icon="{employeeRequestView>Tmlic}" class="erfTimeLine">
				<commons:embeddedControl>
					<f:Form editable="false">
						<f:layout>
							<f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="1" emptySpanL="1"
								emptySpanM="1" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="false"/>
						</f:layout>
						<f:formContainers>
							<f:FormContainer>
								<f:formElements>
									<f:FormElement label="{i18n>REQUEST_STATUS}">
										<f:fields>
											<Text class="erfStatusText"
												text="{ parts: [ {path: 'employeeRequestView>DrfsxOld' }, {path: 'employeeRequestView>DrfsyOld' }], formatter: '.formatter.getStatusText' }"/>
										</f:fields>
									</f:FormElement>
									<f:FormElement label="{i18n>ACTION_DATE}">
										<f:fields>
											<Text class="erfActionDate"
												text="{ path: 'employeeRequestView>Actdt', type: 'sap.ui.model.type.Date', formatOptions: { pattern:'dd.MM.yyyy'} } - { path: 'employeeRequestView>Acttm', type: 'sap.ui.model.odata.type.Time', formatOptions: { pattern:'HH:mm'} }"/>
										</f:fields>
									</f:FormElement>
									<f:FormElement label="{i18n>STATUS_NOTE}" visible="{= ${employeeRequestView>Stcnt} !== ''}">
										<f:fields>
											<Text text="{employeeRequestView>Stcnt}" class="erfStatusChangeNote"/>
										</f:fields>
									</f:FormElement>
								</f:formElements>
							</f:FormContainer>
						</f:formContainers>
					</f:Form>
				</commons:embeddedControl>
			</commons:TimelineItem>
		</commons:content>
	</commons:Timeline>
</core:FragmentDefinition>