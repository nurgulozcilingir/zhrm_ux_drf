<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <Dialog id="idEmployeeSearchDialog" title="{i18n>PERSONNEL_SELECTION}" draggable="true" resizable="true" contentWidth="500px" contentHeight="500px">
        <VBox>
            <Table id="idListEmployeeTable" items="{employeeRequestView>/List}" mode="SingleSelect">
                <columns>
                    <Column width="12em">
                        <Text text="{i18n>PERSONNEL_NO}" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>PERSONNEL_NAME_COL}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Active">
                        <cells>
                            <Text text="{employeeRequestView>Fldky}" />
                            <Text text="{employeeRequestView>Fldvl}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>
        <beginButton>
            <Button text="Ekle" icon="sap-icon://add" type="Emphasized" press="onSaveButtonEmployeePress"/>
        </beginButton>
        <endButton>
            <Button text="{i18n>CLOSE_BUTTON}" press="onCloseButtonEmployeePress"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>