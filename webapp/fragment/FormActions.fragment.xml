	<ActionSheet showCancelButton="true" placement="Auto" buttons="{employeeRequestView>/formActions}">
		<Button text="{= ${employeeRequestView>Noact} ? ${employeeRequestView>Drfbx} (${i18n>NO_APPROVERS}): ${employeeRequestView>Drfbx} }"
			icon="{employeeRequestView>Drfbi}" press="onFormActionSelected" enabled="{= !${employeeRequestView>Noact} }"
