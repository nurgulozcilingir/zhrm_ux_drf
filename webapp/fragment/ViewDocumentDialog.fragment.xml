<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog title="{i18n>DOCUMENT_VIEW_TITLE} - {employeeRequestView>/viewFilters/Ename}" contentWidth="70%" contentHeight="60%">
        <content>
            <VBox class="sapUiMediumMargin">
                <Table id="idViewDocumentTable" noDataText="{i18n>NO_DOCUMENT_UPLOADED}" class="sapUiSmallMarginBottom">
                    <columns>
                        <Column>
                            <Text text="{i18n>DOCUMENT_LINK}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>DOCUMENT_TYPE}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>DOCUMENT_NAME}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>INSTITUTE_NAME_LABEL}"/>
                        </Column>
                        <!-- <Column>
                            <Text text="{i18n>CERTIFICATE_DEPARTMENT_LABEL}"/>
                        </Column> -->
                        <Column>
                            <Text text="{i18n>DOCUMENT_DATE}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>EXPIRY_DATE}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>NOTE_LABEL}"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Link press="onAttachDownloadLink" text="{employeeRequestView>/documentList/Aname}"/>
                                <Text text="{employeeRequestView>/documentList/Zblnx}"/>
                                <Text text="{employeeRequestView>/documentList/Zbltx}"/>
                                <Text text="{employeeRequestView>/documentList/Zkurm}"/>
                                <!-- <Text text="{employeeRequestView>/documentList/Zbolm}"/> -->
                                <Text text="{ path: 'employeeRequestView>/documentList/Ztarh', type: 'sap.ui.model.type.Date', formatOptions: { pattern:'dd.MM.yyyy'} }" />
                                <Text text="{ path: 'employeeRequestView>/documentList/Zgecr', type: 'sap.ui.model.type.Date', formatOptions: { pattern:'dd.MM.yyyy'} }" />
                                <Text text="{employeeRequestView>/documentList/Zznot}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>  
            </VBox>
        </content>
        <buttons>
            <Button text="{i18n>CLOSE_BUTTON}" press="onCloseViewDialog"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>