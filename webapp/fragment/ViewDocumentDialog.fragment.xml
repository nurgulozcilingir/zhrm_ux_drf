<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="Belge Görüntüle - {employeeRequestView>/viewFilters/Ename}" contentWidth="700px" contentHeight="500px">
        <content>
            <VBox class="sapUiMediumMargin">
                <Table id="idViewDocumentTable" 
                       items="{employeeRequestView>/documentListRequest}" 
                       noDataText="Henüz belge yüklenmemiş"
                       class="sapUiSmallMarginBottom">
                    <columns>
                        <Column>
                            <Text text="Dosya Adı"/>
                        </Column>
                        <Column>
                            <Text text="Yükleme Tarihi"/>
                        </Column>
                        <Column>
                            <Text text="Dosya Boyutu"/>
                        </Column>
                        <Column>
                            <Text text="İşlemler"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{employeeRequestView>Filename}"/>
                                <Text text="{ path: 'employeeRequestView>Crdat', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd.MM.yyyy' } }"/>
                                <Text text="{employeeRequestView>Filesize}"/>
                                <HBox>
                                    <Button 
                                        text="İndir" 
                                        icon="sap-icon://download" 
                                        type="Transparent" 
                                        press="onDownloadDocument"
                                        class="sapUiTinyMarginEnd"/>
                                    <Button 
                                        text="Görüntüle" 
                                        icon="sap-icon://show" 
                                        type="Transparent" 
                                        press="onDisplayDocument"/>
                                </HBox>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
        <buttons>
            <Button text="Kapat" press="onCloseViewDialog"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>